{
  "name": "@aliceo2/run-condition-table",
  "version": "0.1.0",
  "main": "main.js",
  "author": "ALICEO2",
  "keywords": [
    "CERN",
    "ALICEO2"
  ],
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AliceO2Group/RunConditionTable"
  },
  "scripts": {
    "eslint": "eslint app --ext .js --format html --output-file ./reports/static/$(if [ \"$RUNNING_ENV\" = \"DOCKER\" ]; then echo \"from-docker\"; else echo \"locally\"; fi)/static-analysis.html",
    "eslint:fix": "npm run eslint -- --fix",
    "static": "npm run eslint",

    "coverage:test": "mocha --exit test/**/mocha-*",
    "coverage:report": "nyc report --report=html --report=json",
    "coverage": "nyc npm run coverage:test && npm run coverage:report ",

    "test": "npm run static; npm run coverage; if [ \"RUNNING_ENV\" = \"DOCKER\" ]; then chmod 666 -R ./reports; fi #TODO platform independent",

    "reports:show": "open ./reports/**/*.html",


    "start:dev": "nodemon app/main.js --watch main.js --watch app --ignore app/public",
    "start:prod": "node app/main.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose-expose.yml up --build",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose-dev.yml up --build",
    "docker:prod:mock": "docker-compose -f docker-compose.yml -f docker-compose-dev.yml -f docker-compose-expose.yml up --build",
    "docker:test": "mkdir -p reports; docker-compose -f docker-compose.yml -f docker-compose-test.yml up --build --abort-on-container-exit",
    "docker:prune": "docker container rm $(docker ps -a --filter name=runconditiontable* -aq)",

    "clean": "rm -rf ./reports; rm -rf .nyc_output",
    "tmp": "node ./tmp/*.js"
  },
  "dependencies": {
    "@aliceo2/web-ui": "^1.18.2",
    "less": "^4.1.1",
    "pg": "^8.6.0",
    "socks-proxy-agent": "^6.1.1"
  },
  "bundledDependencies": [
    "@aliceo2/web-ui",
    "less",
    "pg",
    "socks-proxy-agent"
  ],
  "files": [
    "app/",
    "docs/"
  ],
  "devDependencies": {
    "eslint": "^8.10.0",
    "eslint-output": "^3.0.1",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "sinon": "^12.0.1"
  }
}
