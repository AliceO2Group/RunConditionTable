{
  "name": "@aliceo2/run-condition-table",
  "version": "0.1.0",
  "main": "main.js",
  "author": "ALICEO2",
  "keywords": [
    "CERN",
    "ALICEO2"
  ],
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AliceO2Group/RunConditionTable"
  },
  "scripts": {
    "eslint": "eslint app --ext .js --format html --output-file ./reports/static/static-analysis.html",
    "eslint:fix": "npm run eslint -- --fix",
    "eslint:show": "npm run eslint; firefox ./reports/static/static-analysis.html",
    "static": "npm run eslint",

    "coverage:test": "mocha --exit test/*",
    "coverage:report": "nyc report --report=html --report=json",
    "coverage": "nyc npm run coverage:test && npm run coverage:report ",
    "test": "mkdir -pv ./reports; npm run static; npm run coverage; if [ \"RUNNING_ENV\" = \"DOCKER\" ]; then chmod -R o+w ./reports; fi #TODO platform independent",
    "test:mocha": "mocha",
    "reports:show": "open ./reports/**/*.html",
    "reports:clean": "rm -rf ./reports; rm -rf .nyc_output",

    "start:dev": "nodemon app/main.js --watch main.js --watch app --ignore app/public",
    "start:prod": "node app/main.js",

    "prod": "./make.sh",
    "dev": "./make.sh -s build[up],dump:clean,attach --target dev ",
    "dev:up": "./make.sh -s build[up] --target dev --attach",
    "dev:up-re": "./make.sh -s build[up],dump:restore,attach --target dev -F ",
    "dev:prune": "./make.sh -s prune,db,build,stop --target dev --attach",
    "docker:test": "./make.sh -s prune,build,prune --target test",
    
    "prune": "./make.sh -s prune",
    "app:attach": "docker attach rct_application",
    
    "db:check": "./make.sh -s prune,db,build,follow,prune -t dev -S database",
    "db:attach": "docker exec -it rct_database psql -U postgres -d \"rct-db\"",

    "db:clean": "./make.sh -s dump:clean",
    "dump:make": "./make.sh -s dump:make -F ",
    "dump:list": "./make.sh -s dump:list",
    "dump:restore": "./make.sh -s dump:restore -F ",
    "dump:remove": "./make.sh -s dump:remove -F ",

    "tmp": "nodemon ./tmp/tmp.js"
  },
  "dependencies": {
    "@aliceo2/web-ui": "^1.24.0",
    "esm": "^3.2.25",
    "less": "^4.1.3",
    "pg": "^8.7.3"
  },
  "files": [
    "app/",
    "docs/"
  ],
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^8.10.0",
    "eslint-output": "^3.0.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "request": "^2.88.2",
    "sinon": "^12.0.1",
    "socks-proxy-agent": "^6.2.0"
  }
}
