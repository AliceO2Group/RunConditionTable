{
  "name": "@aliceo2/run-condition-table",
  "version": "0.1.0",
  "main": "main.js",
  "author": "ALICEO2",
  "keywords": [
    "CERN",
    "ALICEO2"
  ],
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AliceO2Group/RunConditionTable"
  },
  "scripts": {
    "eslint": "eslint app --ext .js --format html --output-file ./reports/static/static-analysis.html",
    "eslint:fix": "npm run eslint -- --fix",
    "static": "npm run eslint",
    "coverage:test": "mocha --exit test/**/mocha-*",
    "coverage:report": "nyc report --report=html --report=json",
    "coverage": "nyc npm run coverage:test && npm run coverage:report ",
    "test": "mkdir -pv ./reports; npm run static; npm run coverage; if [ \"RUNNING_ENV\" = \"DOCKER\" ]; then chmod -R o+w ./reports; fi #TODO platform independent",
    "reports:show": "open ./reports/**/*.html #might not work on some systems",
    
    "start:dev": "nodemon app/main.js --watch main.js --watch app --ignore app/public",
    "start:prod": "node app/main.js",
    
    "docker:prod": "mkdir -p ./security; docker-compose -f docker/docker-compose.yml -f docker/docker-compose-expose.yml up --build",
    "docker:dev": "mkdir -p ./security; docker-compose -f docker/docker-compose.yml -f docker/docker-compose-dev.yml -f docker/docker-compose-dev-expose.yml up --build",
    "docker:prod:mock": "docker-compose -f docker/docker-compose.yml -f docker/docker-compose-dev.yml -f docker/docker-compose-expose.yml up --build",
    "docker:test": "mkdir -p ./reports ./security; docker/docker-compose -f docker/docker-compose.yml -f docker/docker-compose-test.yml up --build --abort-on-container-exit",
    "docker:prune-ex": "docker container rm $(docker ps -a --filter name=runconditiontable* -aq) #TODO",
    "docker:prune": "cd docker; docker-compose rm --stop --force -v ",
    "clean": "rm -rf ./reports; rm -rf .nyc_output",
    
    "start:bk": "node app/lib/alimonitor-services/bk-main.js",
    "start:ml": "node app/lib/alimonitor-services/ml-main.js",

    "tmp": "node ./tmp/*.js"
  },
  "dependencies": {
    "@aliceo2/web-ui": "^1.23.1",
    "less": "^4.1.1",
    "pg": "^8.6.0"
  },
  "bundledDependencies": [
    "@aliceo2/web-ui",
    "less",
    "pg",
    "socks-proxy-agent"
  ],
  "files": [
    "app/",
    "docs/"
  ],
  "devDependencies": {
    "eslint": "^8.10.0",
    "eslint-output": "^3.0.1",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "request": "^2.88.2",
    "sinon": "^12.0.1",
    "socks-proxy-agent": "^6.2.0"
  }
}
